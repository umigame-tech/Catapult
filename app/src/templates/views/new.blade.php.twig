<h1>Create new {{ entity['name'] }}</h1>
<form method="post" action="{{ baseUri }}/createConfirm">
{% for attribute in entity['attributes'] %}
  <div>
    <label for="{{ attribute['name'] }}">{{ attribute['name'] }}</label>
{% if attribute.inputType is same as('textarea') %}
    <textarea name="{{ "#{entity['name']}-#{attribute['name']}" }}" id="{{ "#{entity['name']}-#{attribute['name']}" }}"></textarea>
{% else %}
    <input type="{{ attribute.inputType }}" name="{{ "#{entity['name']}-#{attribute['name']}" }}" id="{{ "#{entity['name']}-#{attribute['name']}" }}">
{% endif %}
  </div>
{% endfor %}
  <div>
    <input type="submit" value="Create">
    <a href="{{ baseUri }}">Cancel</a>
  </div>
</form>
